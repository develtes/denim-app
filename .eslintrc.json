{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "default-case": "warn",
      "eqeqeq": "error",
      "no-magic-numbers": ["error", {"ignore": [1]}],
      "array-bracket-spacing": ["warn", {"singleValue": false}],
      "block-spacing": "warn",
      "indent": ["error", 2],
      "object-curly-spacing": ["warn", {
        "objectsInObjects": false, 
        "arraysInObjects": false
      }],
      "no-duplicate-imports": ["error", { "includeExports": true }],
      "no-var": "error",
      "prefer-const": "error"
    }
}
